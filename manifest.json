{
  "manifest_version": 2,
  "name": "Slack Poster",
  "version": "1.0",
  "description": "Simple Slack poster extension",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://slack.com/"
  ]
}
